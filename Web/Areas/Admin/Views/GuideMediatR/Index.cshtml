@model System.Collections.Generic.List<Web.CQRS.Result.GuidResult.GetAllGuidQueryResult>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int i = 0;
}
<div class="table-responsive text-nowrap">
</div>

<div class="card">
    <h3 class="card-header" style="text-align: center;">Vår Guider</h3>
    <div class="table-responsive text-nowrap">
      
        <table class="table">
            <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Bilde</th>
                <th>Id</th>
                <th>Navn</th>
                <th>E-Post</th>
                <th>Beskrivelse</th>
                <th>Actions</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    @{i =  i + 1;}
                    <td>@i</td>
                    <td><img src="@item.ImageUrl" alt="Avatar" class="rounded-circle" style="max-width: 50px; max-height: 50px;"/></td>
                    <td>@item.Id</td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.FullName</strong></td>
                    <td>@item.Email</td>
                    <td><span class="badge bg-label-primary me-1">@item.Description</span></td>
                    <td>
                        <a class="dropdown-item" href="/Admin/GuideMediatR/Update/@item.Id"><i class="bx bx-edit-alt me-1 text-warning"></i> Rediger</a>
                    </td>
                    <td>
                        <a class="dropdown-item" href="javascript:void(0);" onclick="showDeleteConfirmation('@item.Id')"><i class="bx bx-trash me-1 text-danger"></i> Slette</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <br/>
        <br/>
        <button class="btn btn-primary" onclick="window.location.href='/Admin/GuideMediatR/Add'"><i class="fa fa-plus"></i> Legg til en ny Guide</button>
        <br/>
        <br/>
        <br/>
        <br/>
    </div>
</div>

<script>
    function showDeleteConfirmation(id) {
        if (confirm("Er du sikker på at du vil slette dette?")) {
            window.location.href = "/Admin/GuideMediatR/Delete/" + id;
        }
    }
</script>

