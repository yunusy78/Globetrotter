@model Web.CQRS.Commants.GuideCommands.CreateGuidCommand

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<html>
<head>
    <style>
        .custom-form {
        	border: 1px solid #ccc;
        	padding: 20px;
        	border-radius: 10px;
        	margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h1 class="text-center">Ny Guide</h1>
            <form asp-controller="GuideMediatR" asp-action="Add" asp-area="Admin" method="post" >
                <div class="form-group">
                    <label for="title">Navn:</label>
                    <input type="text" id="title" asp-for="FullName" class="form-control"  placeholder="Navn" required="">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label for="title">E Post:</label>
                    <input type="text" id="title" asp-for="Email" class="form-control"  placeholder="E Post" required="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label for="title">Beskrivelse:</label>
                    <textarea type="text" id="title" asp-for="Description" rows="4" class="form-control" placeholder="Beskrivelse"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br/>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="bx bx-save"></i> Lagre</button>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>
</body>
</html>

