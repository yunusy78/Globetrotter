@model Email

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 custom-form">
                <h1 class="text-center">Send E-post</h1>
                <form asp-controller="Email" asp-action="SendEmail" asp-area="Admin" method="post" enctype="multipart/form-data">
                    <div class="mail-body">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Til:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" asp-for="ReceiverEmailAddress">
                                <span asp-validation-for="ReceiverEmailAddress" class="text-danger"></span>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Emne:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Subject">
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Melding:</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Message" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning"><i class="bx bx-envelope"></i> Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

