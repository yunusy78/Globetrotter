@model DTO.DTOs.AnnouncementDTOs.AnnouncementUpdateDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<html>
<head>
    <style>
        .custom-form {
        	border: 1px solid #ccc;
        	padding: 20px;
        	border-radius: 10px;
        	margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h1 class="text-center">Update Kungjøring</h1>
            <form asp-controller="Announcement" asp-action="Update" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Tittel:</label>
                    <input type="text" id="title" asp-for="Title" class="form-control" value="@Model.Title"  placeholder="Tittel" >
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" id="title" asp-for="Id" class="form-control" >
                </div>
                
                <br/>
                <div class="form-group">
                    <label for="title">Emne:</label>
                    <textarea type="text" id="title" asp-for="Content" class="form-control" rows="4" aria-valuemax="@Model.Content" placeholder="Content" > </textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <br/>
                <br/>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Lagre</button>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>
</body>
</html>
