@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<!-- Inkluder jQuery-biblioteket -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<h2>Nyhetsbrev</h2>

<button type="button" id="btnGetList" class="btn btn-primary"><i class="fa fa-list"></i> Nyhetsbrevsliste</button>

<div id="newsletterList">
    
</div>
<br/>
<br/>
<h2><strong>Hent og Oppdater Abonnent</strong></h2>
    <form>
        <div class="form-group">
            <input type="hidden" id="txtNewsletterIdUpdate"/>
            <input type="email" class="form-control" id="txtEmailUpdate" placeholder="E-post"/>
            <input type="text" id="txtStatusUpdate" placeholder="Status" class="form-control"/>
        </div>
        <button type="button" id="btnGetById" class="btn btn-info"><i class="fa fa-eye"></i> Hent Abonnent</button>
        <button type="button" id="btnUpdate" class="btn btn-warning"><i class="fa fa-edit"></i> Oppdater Abonnent</button>
        <button type="button" id="btnDelete" class="btn btn-danger"><i class="fa fa-trash"></i> Slett Abonnent</button>
        <button type="reset" id="btnReset" class="btn btn-secondary"><i class="fa fa-undo"></i> Nullstill Verdier</button>
    </form>
<br/><br/>

<h3>Hent, Oppdater og Slett Abonnenter med ID</h3>
    <div>
        <input type="text" id="newsletterId" placeholder="Verdi for Abonnent-ID" class="form-control" />
    </div>
    <br/><br/>


<script>
    $(document).ready(function () {
        $("#btnGetList").click(function () {
            $.ajax({
                dataType: "json",
                type: "GET",
                url: "/Admin/Newsletter/NewsletterList/",
                success: function (data) {
                    console.log(data);
                    let tableHtml = "<table class='table table-striped table-bordered table-hover'> <thead> <tr> <th>Id</th>  <th>Email</th> <th>Status</th></tr> </thead> <tbody>";
                    $.each(data, function (key, item) {
                        tableHtml += "<tr><td>" + item.id + "</td>  <td>" + item.email + "</td>  <td>" + (item.status ? "Active" : "Inactive") + "</td> </tr>";
                    });
                    tableHtml += "</tbody></table>";
                    $("#newsletterList").html(tableHtml);
                }
            });
        });
        
      });  

    
    $(document).ready(function () {
                $("#btnGetById").click(function () {
                    let Id = $("#newsletterId").val();
                    $.ajax({
                        dataType: "json",
                        type: "GET",
                        url: "/Admin/Newsletter/GetById/" + Id,
                        success: function (data) {
                            console.log(data);
                            $("#txtNewsletterIdUpdate").val(data.id);
                                            $("#txtEmailUpdate").val(data.email);
                                            $("#txtStatusUpdate").val(data.status);
                        }
                    });
                });
            });

    $("#btnUpdate").click(function () {
        // Code to update the writer using the form data
        let Id = $("#newsletterId").val();
        let abonenter = {
            Id: $("#txtNewsletterIdUpdate").val(),
            Email: $("#txtEmailUpdate").val(),
            Status: $("#txtStatusUpdate").val()
        };
        $.ajax({
            dataType: "json",
            type: "POST",
            url: "/Admin/Newsletter/Update/" + encodeURIComponent(Id),
            data: abonenter,
            success: function (data) {
                console.log(data);
                alert("Abonenter opdatert !");
              $("#txtNewsletterIdUpdate").val('');
                    $("#txtEmailUpdate").val('');
                    $("#txtStatusUpdate").val('');
                   
                location.reload();
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    });
    
    $("#btnDelete").click(function () {
        // Code to delete the writer using the form data
        let Id = $("#newsletterId").val();
        $.ajax({
            dataType: "json",
            type: "POST",
            url: "/Admin/Newsletter/Delete/" + encodeURIComponent(Id),
            success: function (data) {
                console.log(data);
                alert("Writer deleted successfully!");
                $("#txtNewsletterIdUpdate").val('');
                    $("#txtEmailUpdate").val('');
                    $("#txtStatusUpdate").val('');
                    $("#newsletterId").val('');
                location.reload();
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    });
    
    $("#btnReset").click(function () {
        // Formdaki input elemanlarının değerlerini sıfırla
        $("#txtNewsletterIdUpdate").val('');
        $("#txtEmailUpdate").val('');
        $("#txtStatusUpdate").val('');
      $("#txtEmail").val('');
           $("#txtWriterName").val('');
          $("#txtStatus").val("");
          $("#newsletterId").val('');   
        
    });


    
</script>
