@model Entity.Concrete.Guide

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<html>
<head>
    <title>Oppdater Profil </title>
    <style>
        .custom-form {
        	border: 1px solid #ccc;
        	padding: 20px;
        	border-radius: 10px;
        	margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h1 class="text-center">Opdater Guide</h1>
            <form asp-controller="Guide" asp-action="Update" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Navn:</label>
                    <input type="text" id="title" asp-for="FullName" class="form-control" value="@Model.FullName"  placeholder="Navn">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input type="hidden" id="title" asp-for="Id" class="form-control" value="@Model.Id">
                </div>
                <div class="form-group">
                    <label for="title">E post:</label>
                    <input type="text" id="title" asp-for="Email" class="form-control" value="@Model.Email"  placeholder="E post">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br/>
                
                <div class="form-group">
                    <label for="title">FacebookUrl:</label>
                    <input type="text" id="title" asp-for="FacebookUrl" class="form-control" value="@Model.FacebookUrl" placeholder="FacebookUrl">
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                </div>
                <br/>
                
                <div class="form-group">
                    <label for="title">InstagramUrl:</label>
                    <input type="text" id="title" asp-for="InstagramUrl" class="form-control" value="@Model.InstagramUrl"  placeholder="InstagramUrl">
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label for="title">TwitterUrl:</label>
                    <input type="text" id="title" asp-for="TwitterUrl" class="form-control" value="@Model.TwitterUrl"  placeholder="TwitterUrl">
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                </div>
                <br/>
                <br/>
                <div class="form-group">
                    <label for="title">Beskrivelse:</label>
                    <textarea type="text" id="title" asp-for="Description" rows="5" class="form-control" value="@Model.Description" placeholder="Beskrivelse"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br/>
                <div class="mb-3">
                    <label asp-for="ImageUrl">Velg Bilde 1:</label>
                    <input type="file" id="uploadBox" name="file1" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.ImageUrl" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Status" />
                </div>
                <br/>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Lagre</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>

