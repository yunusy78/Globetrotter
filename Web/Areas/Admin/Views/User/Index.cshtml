@model List<Entity.Concrete.ApplicationUser>
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int count = 0;
}
<br/>
<div class="table-responsive text-nowrap">
</div>

<div class="card">
    <h3 class="card-header" style="text-align: center;">Brukere</h3>
    <div class="table-responsive text-nowrap">
      
        <table class="table">
            <thead class="table-warning">
            <tr>
                <th>#</th>
                <th>Bilde</th>
                <th style="text-align: center">Id</th>
                <th>Fornavn</th>
                <th>Etternavn</th>
                <th style="text-align: center">E Post</th>
                <th>Telefonnummer</th>
                <th>Kjønn</th>
                <th>Kommentarer</th>
                <th>Slette</th>
                <th>Se på reservasjoner</th>
            </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    @{ count = count + 1;}
                    <td>@count</td>
                    <td><img src="@item.ImageUrl" alt="Avatar" class="rounded-circle" style="max-width: 50px; max-height: 50px;"/></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td><span class="badge bg-label-primary me-1">@item.Email</span></td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Gender</td>
                    <td>
                        <a class="dropdown-item" href="/Destination/Details/@item.Id/"><i class="bx bx-info-circle me-1 text-success"></i> Kommentarer</a>
                    </td>
                    <td>
                        <a class="dropdown-item" href="javascript:void(0);" onclick="showDeleteConfirmation('@item.Id')"><i class="bx bx-trash me-1 text-danger"></i> Slette</a>
                    </td>
                    <td>
                        <a class="dropdown-item" href="/Admin/User/FindReservation/@item.Id"><i class="bx bx-link-external me-1 text-dark"></i> Se på Reservasjoner</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <br/>
        <br/>
        <br/>
        <br/>
    </div>
</div>

<script>
    function showDeleteConfirmation(id) {
        if (confirm("Er du sikker på at du vil slette dette?")) {
            window.location.href = "/Admin/AdminDestination/Delete/" + id;
        }
    }
</script>