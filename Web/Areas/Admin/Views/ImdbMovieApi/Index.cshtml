@model List<MovieViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int i = 0;
}

<div class="table-responsive text-nowrap">
</div>

<div class="card">
    <h3 class="card-header" style="text-align: center;">IMDb Top 100 Movies</h3>
    <div class="table-responsive text-nowrap">
      
        <table class="table">
            <thead class="table-primary">
            <tr>
                <th>Rank</th>
                <th>Bilde</th>
                <th>Title</th>
                <th>Rating</th>
                <th>Year</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Rank</td>
                    <td><img src="@item.Thumbnail" alt="Avatar" class="rounded-circle" style="max-width: 50px; max-height: 50px;"/></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Title</strong></td>
                    <td>@item.Rating</td>
                    <td>@item.Year</td>
                    <td><span class="badge bg-label-primary me-1">@item.Description</span></td>
                    
                </tr>
            }
            </tbody>
            
        </table>
        
    </div>
</div>