@model List<Entity.Concrete.Comment>
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
<br/>
<div class="table-responsive text-nowrap">
</div>
<div class="card">
    <h3 class="card-header" style="text-align: center">Kommentarer</h3>
    <div class="table-responsive text-nowrap">
      
        <table class="table">
            <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Navn</th>
                <th>E Post</th>
                <th>Destinasjon</th>
                <th>Melding</th>
                <th>Dato</th>
                <th>Actions</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Destination.ImageUrl" alt="Avatar" class="rounded-circle" style="max-width: 50px; max-height: 50px;"/></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong></td>
                    <td>@item.Email</td>
                    <td>@item.Destination.City</td>
                    <td><span class="badge bg-label-primary me-1">@item.Message</span></td>
                    <td> @(((DateTime)item.CreatedAt).ToString("dd-MMM-yyyy"))</td>
                    <td>
                        <a class="dropdown-item" href="javascript:void(0);" onclick="showDeleteConfirmation('@item.Id')"><i class="bx bx-trash me-1 text-danger"></i> Slette</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <br/>
        <br/>
        <br/>
        <br/>
    </div>
</div>

<script>
    function showDeleteConfirmation(id) {
        if (confirm("Er du sikker på at du vil slette dette?")) {
            window.location.href = "/Admin/Comment/Delete/" + id;
        }
    }
</script>