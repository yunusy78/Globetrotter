@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_UserLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Registreringsskjema_v10 av Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- LINEARICONS -->
    <link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">
		
    <!-- STIL CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
    <style>
        .form-holder {
            font-size: 12px; /* İstediğiniz boyuta göre ayarlayabilirsiniz */
            vertical-align: middle;
            margin-right: 5px; /* Sembol ile metin arasındaki boşluğu ayarlayabilirsiniz */
        }
    </style>
</head>

<body>
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Ny konto?</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Registrer</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Registrer deg som en Medlem </li>
            </ul>
        </div>
    </div>
</section>
<div class="wrapper">
    <div class="inner">
        <img src="~/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" >
            <h3>Ny konto?</h3>
            
            <div class="form-holder">
                <span class="lnr lnr-user"></span>
                <input type="text" asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Fornavn">
            </div>
            
            <div><span asp-validation-for="Input.FirstName" class="text-danger" ></span></div>
            
            <div class="form-holder">
                <span class="lnr lnr-user"></span>
                <input type="text" asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Etternavn">
            </div>
            
            <div><span asp-validation-for="Input.LastName" class="text-danger"></span></div>
            
            <div class="form-holder">
                <span class="lnr lnr-phone-handset"></span>
                <input type="text" asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="Telefonnummer">
            </div>
            
            <div><span asp-validation-for="Input.PhoneNumber" class="text-danger"></span></div>
            
            
            <div class="form-holder">
                <span class="lnr lnr-phone-handset"></span>
                <input type="email" asp-for="Input.Email" class="form-control" aria-required="true" placeholder="E Post">
            </div>
            
            <div><span asp-validation-for="Input.Email" class="text-danger"></span></div>
            
        
            <div class="form-holder">
                <span class="lnr lnr-lock"></span>
                <input type="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Passord">
                    
            </div>
            
                <div><span asp-validation-for="Input.Password" class="text-danger"></span></div>
                
            <div class="form-holder">
                <span class="lnr lnr-lock"></span>
                <input type="password" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Bekreft Passord">
            </div>
            
            <div> <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></div>
            
            <button>
                <span>Registrer</span>
            </button>
        </form>
        <img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
    </div>
</div>

<div class="col-md-6 col-md-offset-2">
    <section>
        <h4>Use another service to register.</h4>
        <hr />
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                        about setting up this ASP.NET application to support logging in via external services</a>.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
    </section>
</div>

<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
<script src="~/colorlib-regform-26/js/main.js"></script>
</body><!-- Dette malene ble laget av Colorlib (https://colorlib.com) -->
</html>