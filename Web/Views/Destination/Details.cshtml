@model Entity.Concrete.Destination

@{
    ViewBag.Title = "Details";
    Layout = "_UserLayout";
}

<!doctype html>
<html lang="zxx">



<body>


<!--header-->
<!-- //header -->
<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Turdetaljer (Få de nyeste oppdateringene og tilbudene.) </h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Hjem</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Enkelt Innlegg </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!--/blog-->
<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">Your Blog Posts are Boring? Here are 9 Tips for
            Making your Writing more Interesting</h3>
        <div class="blog-post-align">
            <div class="blog-post-img">
                <a href="#"><img src="~/Traversal-Liberty/assets/images/c1.jpg" alt="" class="rounded-circle img-fluid"/></a>
            </div>
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                    <a href="#">Johnson smith</a> in <a href="#url">Traversal</a>
                </div>
                <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                        <span class="meta-value"> June 13, 2020 </span>
                    </li>
                    <li class="meta-item blog-students">
                        <span class="meta-value"> 6min read</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<section class="blog-post-main w3l-homeblock1">
<!--/blog-post-->
<div class="blog-content-inf pb-5">
<div class="container pb-lg-4">
<div class="single-post-image">
    <div class="post-content">
        <img src="@Model.CoverImageUrl" style="height: 530px; width: 1100px;" class="radius-image img-fluid mb-5" alt=""/>
    </div>
</div>
<div class="single-post-content">
<p class="alphabet mb-4"><span class="big-letter">A</span>@Model.Details1</p>
<blockquote class="blockquote my-5">
    <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
    <p>En god måte å utforske verden er gjennom reiser. Det å oppdage nye kulturer og møte mennesker fra forskjellige steder gir en dypere forståelse av mangfoldet i verden.</p>
    <footer class="blockquote-footer mt-3">Smith Larsen</footer>
</blockquote>

<div class="sing-post-thumb mb-5 row pt-3">
    <div class="col-sm-6">
        <a href="#url"><img src="@Model.ImageUrl" class="img-fluid radius-image" alt=""></a>
    </div>
    <div class="col-sm-6 mt-sm-0 mt-3">
        <a href="#url"><img src="@Model.ImageUrl2" class="img-fluid radius-image" alt=""></a>
    </div>
</div>
<h3 class="blog-desc-big m-0 mb-lg-4 mb-3"></h3>
<p class="mb-4">@Model.Details2</p>

    
<div class="d-grid left-right mt-5 pb-md-5">
    <div class="buttons-singles tags">
        <h4>Emner :</h4>
        <a href="#blog-tag">Reise</a>
        <a href="#blog-tag">Kultur</a>
        <a href="#blog-tag">Hotell</a>
        <a href="#blog-tag">Mat</a>
    </div>
    <div class="buttons-singles">
        <h4>Share :</h4>
        <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
        <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
        <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
        <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden=" true"></span></a>
    </div>
</div>

<!--//author-card-->
@await Component.InvokeAsync("GuideDetails" , new { id = Model.Id })
<!--//author-card-->


@await Component.InvokeAsync("CommentList" , new { id = Model.Id })

<!--//comment-form-->
@await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")

</div>
</div>
</div>
</section>


</body>

</html>
