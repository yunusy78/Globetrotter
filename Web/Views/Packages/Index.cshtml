@model System.Collections.Generic.List<Entity.Concrete.Destination>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
      <div class="container">
        <h2 class="title">Pakker</h2>
        <ul class="breadcrumbs-custom-path mt-2">
          <li><a href="#url">Hjem</a></li>
          <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Pakker </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- //about breadcrumb -->
  <!--/pricing-->
  <section class="w3l-pricinghny">
    <div class="pricing-inner-info py-5">
      <div class="container py-lg-4">
        <!--/pricing-info-grids-->
        <div class="pricing-info-grids">
          <!--/box-->
          @foreach(var item in Model)
          {
          <div class="price-box">
            <div class="grid grid-column-2">
              <div class="column pr-img-gd">
                <h6 class="pricehead"><span class="fa fa-delicious mr-2" aria-hidden="true"></span> @item.City</h6>
              </div>
              <div class="column text-lg-center">
                <p class="price-title">@item.DayNight</p>
              </div>
              <div class="column price-number text-md-right">
               <h3 class="pricing">
                   <sup class="pri1">kr</sup> @item.Price <span class="price-small"></span>
               </h3>
                <a href="Member/Reservation/AddReservation" class="btn btn-style btn-primary ml-lg-3">Bestill nå</a>
              </div>
            </div>
          </div>
    }
        </div>
        <!--/pricing-info-grids-->
      </div>
    </div>
  </section>
