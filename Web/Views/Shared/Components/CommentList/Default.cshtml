@model List<Entity.Concrete.Comment>
<div class="comments mt-5">
     <h2 class="text-center mt-5" style="color: #f6273a">Kommentarer @Model.Count </h2>
    @foreach( var item in Model)
    {
    <div class="media mt-4">
        <div class="img-circle">
            <img src="@item.User.ImageUrl" class="img-fluid" alt="...">
        </div>
        <div class="media-body">

            <ul class="time-rply mb-2">
                <li><a href="#URL" class="name mt-0 mb-2 d-block">@item.Name</a>
                    @item.CreatedAt

                </li>
                <li class="reply-last">
                    <a href="#reply" class="reply">
                        Svar</a>
                </li>
            </ul>
            <p>@item.Message</p>
        </div>
    </div>
}
</div>

