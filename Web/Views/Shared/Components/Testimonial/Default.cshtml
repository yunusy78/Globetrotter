@model List<Entity.Concrete.Testimonial>

<section class="w3l-clients" id="clients">
  <!-- /grids -->
  <div class="cusrtomer-layout py-5">
    <div class="container py-lg-4 py-md-3 pb-lg-0">
      <div class="heading text-center mx-auto">
        <h6 class="sub-title text-center">Dette sier de</h6>
        <h3 class="hny-title mb-md-5 mb-4">Meningene fra gjestene våre</h3>
      </div>
      <!-- /grids -->
      <div class="testimonial-width">
        <div id="owl-demo1" class="owl-two owl-carousel owl-theme">
          @foreach (var item in Model)
          {
          <div class="item">
            <div class="testimonial-content">
              <div class="testimonial">
                <blockquote>
                  <span class="fa fa-quote-left" aria-hidden="true"></span>
                  @item.Comment
                </blockquote>
                <div class="testi-des">
                  <div class="test-img"><img src="/@item.ImageUrl" class="img-fluid" alt="client-img">
                  </div>
                  <div class="peopl align-self">
                    <h3>@item.Name</h3>
                    <p class="indentity">Example City</p>
                  </div>
                </div>
              </div>
            </div>
             </div>
            }
         
        </div>
      </div>
    </div>
    <!-- /grids -->
  </div>
  <!-- //grids -->
</section>

