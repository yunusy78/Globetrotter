@model Entity.Concrete.Message

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
      <div class="container py-2">
        <h2 class="title">Kontakt oss</h2>
        <ul class="breadcrumbs-custom-path mt-2">
          <li><a href="#url">Hjem</a></li>
          <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Kontakt </li>
        </ul>
      </div>
    </div>
  </section>

<section class="w3l-contact" id="contact">
  <div class="contact-infubd py-5">
    <div class="container py-lg-3">
      <div class="contact-grids row">
        <div class="col-lg-6 contact-left">
          <div class="partners">
            <div class="cont-details">
              <h5>Kontakt oss</h5>
              <p class="mt-3 mb-4">Hei der, vi er tilgjengelige 24/7 via faks, e-post eller telefon. Ta kontakt så vi kan
                snakke videre om det.</p>
            </div>
            <div class="hours">
              <h6 class="mt-4">E-post:</h6>
              <p> <a href="globetrotter.org.no@gmail.com"></a>globetrotter.org.no@gmail.com</p>
              <h6 class="mt-4">Besøk oss:</h6>
              <p> Arendal.</p>
              <h6 class="mt-4">Kontakt:</h6>
              <p class="margin-top"><a href="tel:+47-999 99 99"></a>tel:+47-999 99 99</p>
            </div>
          </div>
        </div>
        <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
          <form asp-action="Add" asp-controller="Message" asp-area="" method="post" class="signin-form">
            <div class="input-grids">
              <div class="form-group">
                <input type="text" asp-for="Name" id="w3lName" placeholder="Ditt navn*" class="contact-input" />
              </div>
              <div class="form-group">
                <input type="email" asp-for="Email" id="w3lSender" placeholder="Din e-post*" class="contact-input" required="" />
              </div>
              <div class="form-group">
                <input type="text" asp-for="Subject" id="w3lSubect" placeholder="Emne*" class="contact-input" />
              </div>
            </div>
            <div class="form-group">
              <textarea asp-for="MessageText" placeholder="Skriv meldingen din her*" required=""></textarea>
            </div>
            <div class="text-right"> 
              <button class="btn btn-style btn-primary">Send Melding</button>
            </div>
          </form>
        </div>
      </div>
      <div class="map mt-5 pt-md-5">
        <h5>Kart</h5>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d32069.884163608635!2d8.772242264662576!3d58.45837286104283!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x463dbce36c2d3a01%3A0x9519dd6b7c5b9606!2sArendal%2C%20Norway!5e0!3m2!1sen!2sno!4v1629411208493!5m2!1sen!2sno"
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy">
        </iframe>

      </div>
    </div>
  </div>
</section>
